{
    // code-runner ctrl+option+n
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ -std=c++17 -I . -g $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
        "python": "python3 -u",
    },
    "files.exclude": {
        "**/main": true,
        "**/main.dSYM": true,
        "**/bin": true,
        "**/obj": true,
        "**/**.csproj": true,
    }
}